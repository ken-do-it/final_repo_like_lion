# OPENAI_API_KEY=your_openai_api_key_here



# 한국 위치 범위 설정 (상수)
KOREA_LAT_MIN=33
KOREA_LAT_MAX=43
KOREA_LON_MIN=124
KOREA_LON_MAX=132

# ==========================================
# 4. Frontend (Vite)
# ==========================================
# 프론트엔드용 구글 맵 키 (Vite는 VITE_ 접두사가 필수)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here


# ==========================================
# django_app/.env - Translation Service URL FastAPI로 번역 요청용
# ==========================================
# 로컬용
# FASTAPI_TRANSLATE_URL=http://localhost:8003/api/ai/translate

# 도커용
FASTAPI_TRANSLATE_URL=http://fastapi-ai-translation:8003/api/ai/translate





# ==========================================
# 토스페이먼츠 API 키
# ==========================================
# 테스트 키: https://developers.tosspayments.com에서 발급
# 운영 키는 사업자 인증 후 발급 가능
TOSS_CLIENT_KEY=test_ck_default
TOSS_SECRET_KEY=test_sk_default

# 결제 성공/실패 리다이렉트 URL (프론트엔드 주소)
TOSS_SUCCESS_URL=http://localhost:3000/payment/success
TOSS_FAIL_URL=http://localhost:3000/payment/fail


# ==========================================
# 지하철 API 키
# ==========================================
ODSAY_API_KEY=여기에_ODsay_API_키_입력
