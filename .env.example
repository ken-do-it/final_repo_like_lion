# ==========================================
# 1. 공통 데이터베이스 설정 (Database)
# ==========================================
DB_ENGINE=django.db.backends.postgresql
DB_HOST=db
DB_PORT=5432
DB_NAME=korea_travel_db
DB_USER=myuser
# 기존 DB_PASSWORD와 DB_PASS를 이걸로 통일했습니다.
DB_PASSWORD=change_this_password

# ==========================================
# 2. Django 설정
# ==========================================
SECRET_KEY=your_django_secret_key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,*

# FastAPI 연동 주소 (Docker 내부 통신용)
FASTAPI_INDEX_URL=http://fastapi:8000/index-data

# 항공/공공데이터 API
TAGO_SERVICE_KEY=여기에_발급받은_TAGO_API_키를_입력하세요
KAC_SERVICE_KEY=여기에_발급받은_한국공항공사_API_키를_입력하세요

# ⚠️ [주의] 로컬(Windows) 경로입니다.썸네일 생성용
# 도커 배포 시에는 컨테이너 내부 경로(/usr/bin/ffmpeg 등)로 바꿔야 할 수 있습니다.
# 일단 로컬 테스트용으로 남겨둡니다.
FFPROBE_BIN=C:\Users\사용자\AppData\Local\Microsoft\WinGet\Links\ffprobe.exe
FFMPEG_BIN=C:\Users\사용자\AppData\Local\Microsoft\WinGet\Links\ffmpeg.exe

# ==========================================
# 3. FastAPI & AI 공통 설정
# ==========================================
# 외부 API 키 (지도/카카오)
#연주 카카오 API
YJ_KAKAO_REST_API_KEY=your_kakao_rest_api_key_here
# 서버에서 사용하는 구글 맵 키
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Hugging Face AI 모델
HF_MODEL=facebook/nllb-200-distilled-600M
# HF_TOKEN=your_huggingface_api_key_here

# 한국 위치 범위 설정 (상수)
KOREA_LAT_MIN=33
KOREA_LAT_MAX=43
KOREA_LON_MIN=124
KOREA_LON_MAX=132

# ==========================================
# 4. Frontend (Vite)
# ==========================================
# 프론트엔드용 구글 맵 키 (Vite는 VITE_ 접두사가 필수)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here


# ==========================================
# django_app/.env - Translation Service URL FastAPI로 번역 요청용
# ==========================================
FASTAPI_TRANSLATE_URL=http://fastapi:8000/api/ai/translate